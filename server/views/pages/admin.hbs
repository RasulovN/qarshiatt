  <section class="home-section mt-5">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard">Dashboard</span>
      </div>
      <div class="search-box">
        <input type="text" placeholder="Search...">
        <i class='bx bx-search' ></i>
      </div>
    </nav>

    <div class="home-content">
      <div class="overview-boxes">
        <div class="box">
          <div class="right-side">
            <div class="box-topic">All Users</div>
            <div class="number">40</div>
          </div>
        </div>
        <div class="box">
          <div class="right-side">
            <div class="box-topic">All News</div>
            <div class="number">80</div>
          </div>
        </div>
        <div class="box">
          <div class="right-side">
            <div class="box-topic">Comments</div>
            <div class="number">17</div>
          </div>
        </div>
      </div>

      <div class="sales-boxes">
        <div class="recent-sales box">
          <div class="title">Users</div>

          <div class="sales-details">
            <ul class="details">
            <li class="topic">Users</li>
            {{#each users}}
            <li><a href="#">{{fullName}}</a></li>
            {{/each}}
          </ul>
          <ul class="details">
            <li class="topic">Email</li>
            {{#each users}}
            <li><a href="#">{{email}}</a></li>
             {{/each}}
          </ul>
          <ul class="details">
            <li class="topic">Phone Number</li>
            {{#each users}}
            <li><a href="#">{{phone}}</a></li>
             {{/each}}
          </ul>
          <ul class="details">
            <li class="topic">Password</li>
            {{#each users}}
            <li><a href="#">{{password}}</a></li>
            {{/each}}
          </ul>
          <ul class="details">
            <li class="topic">isAdmin</li>
            {{#each users}}
            <li><a href="#">{{isAdmin}}</a></li>
            {{/each}}
          </ul>
          </div>

          <div class="button">
            <a href="/allUser">See All</a>
          </div>
        </div>

      </div>
    </div>

        <div class="home-content">
      <div class="sales-boxes">
        <div class="recent-sales box">
          <div class="title">NEWS</div>
            <table border="1px">
              <tr>
